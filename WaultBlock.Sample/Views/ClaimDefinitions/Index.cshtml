@model IEnumerable<WaultBlock.Models.ClaimDefinition>

@{
    ViewData["Title"] = "Index";
}

<h2>Claim Definitions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CredentialSchema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CredentialSchema.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CredentialSchema.Attributes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
