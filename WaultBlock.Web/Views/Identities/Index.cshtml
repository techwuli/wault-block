@model IEnumerable<WaultWallet>
@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h1>Identities</h1>
</div>

<a asp-action="CreateWallet" asp-controller="Identities" class="btn btn-default">Create Wallet</a>

@foreach (var wallet in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">@wallet.Name</div>
        </div>
        <div class="panel-body">
            <ul>
                @foreach (var record in wallet.Records)
                {
                    <li>@record.Value</li>
                }
            </ul>
        </div>
    </div>
}
